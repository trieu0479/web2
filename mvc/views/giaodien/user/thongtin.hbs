{{> userHeader }}

<div class="container thongtin">
    <!-- row -->
    <div class="row">
         {{#each detail}}
        <div class="col-sm-3">
            <!--left col-->
            <div class="text-center">
                <img src="/images/{{AnhDaiDien}}" class="avatar img-circle img-thumbnail"
                    alt="avatar">
                <h6>Upload a different photo...</h6>
                <input type="file" class="text-center center-block file-upload" name="AnhDaiDien" >
            </div>
            </hr><br>

            <div class="panel panel-default">
                <div class="panel-heading">Social Media</div>
                <div class="panel-body">
                    <i class="fa fa-facebook fa-2x"></i> <i class="fa fa-github fa-2x"></i> <i
                        class="fa fa-twitter fa-2x"></i> <i class="fa fa-pinterest fa-2x"></i> <i
                        class="fa fa-google-plus fa-2x"></i>
                </div>
            </div>

        </div>
        <!--/col-3-->
        <div class="col-sm-9">
            <h3>Thông tin tài khoản</h3>
            <div class="tab-content">
                <div class="tab-pane active" id="home">
                    <form class="form" action="/thongtin/update" method="post" >
                        <div class="form-group">
                            <div class="col-xs-6">
                                <h4 for="txtTen">Tên</h4>
                                <input type="text" class="form-control" name="TenDangNhap" id="txtTen" value="{{TenDangNhap}}">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-6">
                                <h4>Tên hiển thị</h4>
                                <input type="text" class="form-control" name="TenHienThi" value="{{TenHienThi}}">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-6">
                                <h4>Email</h4>
                                <input type="email" class="form-control" name="Email" value="{{Email}}">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-6">
                                <h4>Ngày sinh</h4>
                                <input class="form-control" type="text" autocomplete="off" name="ngaythangnamsinh"
                                    id="namsinh" value="{{Date NgayThangNamSinh}}" />
                            </div>
                        </div>
                       <div class="form-group">
                            <div class="col-xs-6">                              
                                {{!-- <h4>#</h4>                                                      --}}
                                <input readonly type="hidden" class="form-control" name="MaTaiKhoan" id="txtID" value="{{MaTaiKhoan}}">
                            </div>
                        </div>
                        <div class="form-group">
                           <div class="col-xs-12">
                                <br>
                              	<button class="btn btn-lg btn-success pull-right" type="submit"><i class="glyphicon glyphicon-ok-sign"></i> Save</button>
                               	<!--<button class="btn btn-lg" type="reset"><i class="glyphicon glyphicon-repeat"></i> Reset</button>-->
                            </div>
                      </div>
                      {{/each}}
                    </form>               
                </div>             
            </div>
            <!--/tab-pane-->
        </div>
        <!--/tab-content-->
    </div>
    <!--/col-9-->
</div>
<!--/row-->
<!-- /container -->
