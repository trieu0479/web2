{{> userHeader }}

<!-- section -->
<div class="section">
	<!-- container -->
	<div class="container">
		<!-- row -->
		<div class="row">
			<!-- Post content -->
			<div class="col-md-8">
				<div class="section-row sticky-container">
					{{#if this.error}}
					<div class="alert alert-danger" role="alert">
						Bài viết không có. <a href="/" class="alert-link">Click vào đây để về trang chủ</a>.
					</div>
					{{else}}
					{{#each baiviet}} {{!--lay data tu router--}}
					<div class="main-post">
						<h2>{{TieuDeBaiViet}}</h2>
						<div class="post-meta">
							<span class="badge badge-pill badge-danger">{{TenDanhMuc}}</span>
							<a class="post-category cat-2" href="#">{{TenChuyenMuc}}</a>
							{{!-- <a class="post-category cat-2" href="#">{{TenTag}}</a> --}}
							<span class="post-date">{{getDate NgayDang}}</span>&nbsp;&nbsp;&nbsp;&nbsp;
							<span class="post-date" style="font-size: 16px;"><i class="fas fa-eye"
									style="color: red"></i>&nbsp;{{SoLuotXem}}</span>

						</div>
						<br>
						<img src="/images/{{AnhURL}}" alt="anh đai dien bai viet" class="" width="100%" height="400px">
						<div class="noidung">
							<p>{{NoiDung}}</p>
						</div>
					</div>
					{{/each}}
					{{/if}}
					<div class="post-shares sticky-shares">
						<a href="#" class="share-facebook"><i class="fa fa-facebook"></i></a>
						<a href="#" class="share-twitter"><i class="fa fa-twitter"></i></a>
					</div>
				</div>
				<!-- comments -->
				<div class="section-row">
					{{#if this.error}}
					<div class="alert alert-danger" role="alert">
						Bài viết không có. <a href="/" class="alert-link">Click vào đây để về trang chủ</a>.
					</div>
					{{else}}
					<div class="section-title">
						<h2> Bình luận </h2>
					</div>
					{{#each showbinhluan}}
					<div class="post-comments">
						<!-- comment -->
						<div class="media">
							<div class="media-left">
								<img class="media-object" src="/static/user/img/avatar.png" alt="">
							</div>
							<div class="media-body">
								<div class="media-heading">
									<h4 style="color:#dab549">{{TenHienThi}}</h4>
									<span class="time">{{getDate NgayBinhLuan}}</span>
									{{!-- <a href="#" class="reply">Reply</a> --}}
								</div>
								<p>{{NoiDung}}</p>
							</div>
						</div>
					</div>
					{{/each}}
					<form class="post-comments" method="POST">
						<div class="media">
							<div class="media-left">
								<img class="media-object" src="/static/user/img/avatar.png" alt="">
							</div>
							<div class="media-body">
								<div class="form-group">
									<input class="input" type="text" name="binhluan" placeholder="Viết bình luận">
								</div>

								<div class="text-right">
									<button class="btn btn-primary">Bình luận</button>
								</div>
								{{#each errors}}
								<div class="alert alert-danger" role="alert">
									{{msg}}
								</div>
								{{/each}}
							</div>
						</div>
					</form>
					{{!-- {{/each}}				 --}} {{!-- --}}
					{{/if}}
				</div>
				<!-- /comments -->
			</div>
			<!-- /Post content -->
			<!-- aside -->
			<div class="col-md-4">
				<!-- post widget -->
				<div class="aside-widget">
					<div class="section-title">
						<h3 class="widget-title">5 Bài Viết Cùng Chuyên Mục</h3>		
					</div>
					{{#if this.error}}
					<div class="alert alert-danger" role="alert">
						Không có bài viết cùng chuyên mục.
					</div>
					{{else}}
					{{#each nambaiviet}}
					<div class="post post-widget">
						<a class="post-img" href="/baiviet/{{IDBaiViet}}"><img src="/images/{{AnhURL}}" alt=""></a>
						<div class="post-body">
							<h3 class="post-title"><a href="/baiviet/{{IDBaiViet}}">{{TieuDeBaiViet}}</a></h3>
						</div>
					</div>
					{{/each}}
					{{/if}}
				</div>
				<!-- /post widget -->
				<!-- catagories -->
				<div class="aside-widget">
					<div class="section-title">
						<h3 class="widget-title">Chuyên Mục</h3>
					</div>
					<div class="category-widget">
						{{#each demchuyenmuc}}
						<ul>
							<li><a href="/danhsach/{{IDChuyenMuc}}"
									class="cat-1">{{TenChuyenMuc}}<span>{{sl1}}</span></a>
							</li>
						</ul>
						{{/each}}
					</div>
				</div>
				<!-- /catagories -->
				<!-- tags -->
				<div class="tags-widget">
					<h3 class="widget-title">Tags</h3>
					<ul class="list-unstyled list-inline tags">
						{{#each taglk}}
						<li><a href="/tag/{{IDBaiViet}}">{{TenTag}}</a></li>
						{{/each}}
					</ul>
				</div>
				<!-- /tags -->
			</div>
			<!-- /aside -->
		</div>
		<!-- /row -->
	</div>
	<!-- /container -->
</div>
<!-- /section -->


{{> userFooter }}