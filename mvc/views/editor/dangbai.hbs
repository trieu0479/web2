                    <div class="modal-footer">
                        <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                        <a class="btn btn-primary" href="login.html">Logout</a>
                    </div>
                </div>
            </div>
        </div>
        <div id="content-wrapper">

            <div class="container-fluid">

                <!-- Breadcrumbs-->
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="#">Dashboard</a>
                    </li>
                    <li class="breadcrumb-item active">Overview</li>
                </ol>
                <form method="post" action="./add">
                    <div class="form-group">
                        <label for="txtID">Tiêu đề</label>
                        <input type="text" class="form-control" id="tieude" name="TieuDeBaiViet">
                    </div>
                    <div class="form-group">
                        <label for="txtND">Nội dung</label>
                        <textarea name="NoiDung" id="" cols="30" rows="10"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="txtNDTT">Nội dung tóm tắt</label>
                        <textarea name="NDTomTat" id="" cols="30" rows="10"></textarea>
                    </div>
                    <div class="form-group">
                        <h6 for="txtcm">Chuyên mục</h6>
                        <select id="txtcm" name="IDChuyenMuc" class="form-control">
                            {{#each chuyenmuc}}
                            <option value="{{IDChuyenMuc}}">{{TenChuyenMuc}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="txtID">Hình ảnh</label>
                        <input name="AnhURL" type="file" id="upload" onchange="">
                    </div>
                    <div class="card-footer text-right">
                        <button type="submit" class="btn btn-success">
                            <i class="fa fa-check" aria-hidden="true"></i>
                            Save
                        </button>
                    </div>
                    <div class="form-group">
                        {{#if req.session.user.user }}
                        <input type="hidden" class="form-control" id="tieude" name="IDWriter"
                            value="{{req.session.user.user.MaTaiKhoan}}">
                        {{/if}}
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script type="text/javascript">
        $(document).ready(function () {
            tinymce.init({
                selector: "textarea",
                toolbar: "mybutton",
                setup: function (editor) {
                    editor.addButton('mybutton', {
                        icon: 'image',
                        onclick: function (e) {
                            console.log(e.target);
                            console.log(editor.getContent());
                            var utf8length = 0;
                            var string = editor.getContent();
                            for (var n = 0; n < string.length; n++) {
                                var c = string.charCodeAt(n);
                                if (c < 128) {
                                    utf8length++;
                                }
                                else if ((c > 127) && (c < 2048)) {
                                    utf8length = utf8length + 2;
                                }
                                else {
                                    utf8length = utf8length + 3;
                                }
                            }
                            console.log(utf8length);
                            var str = editor.getContent();
                            var m = encodeURIComponent(str).match(/%[89ABab]/g);
                            console.log(editor.getContent());
                            console.log(str.length + (m ? m.length : 0));


                        }
                    });
                }
            });
        });
    </script>
</body>

