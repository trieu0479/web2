  </script>
  <form id="main-form" action="" onsubmit="CheckSubmit()" method="POST">
    <div id="login-box">
      <div class="left">        
        <h1 style="color:chocolate">Sign up</h1>
        <input type="text" name="username" placeholder="Username" id="tentk" />
        <input type="text" name="displayname" placeholder="Displayname" id="tenhienthi" />
        <input type="text" name="email" placeholder="E-mail" id="mail" />
        <input type="password" name="password" placeholder="Password" id="matkhau" />
        <input type="text" name="yearbirth" placeholder="YearofBirth" id="namsinh" />
        <input type="submit" name="signin_submit" id="signUp_btn" value="SUBMIT" >
      </div>
      <div class="doyou">
        Do you have already account ?<a href="dangnhap"> Sign In</a>
      </div>
      
      <div class="right">
        <span class="loginwith">Sign in with<br />social network</span>
        <button class="social-signin facebook">Log in with facebook</button>
        <button class="social-signin twitter">Log in with Twitter</button>
        <button class="social-signin google">Log in with Google+</button>
      </div>
      <div class="or">OR</div>
      {{#if errors}}
          <ul class="mess_msg">
            {{#each errors}}
            <li style="color:red"><i class="far fa-thumbs-up"></i>{{msg}} !</li>
            {{/each}}
          </ul>
        {{/if}}
    </div>
    
  </form>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
<script>
document.getElementById('main-form').onsubmit = function () {
  if (CheckSubmit()) {
    signUp()
  }
  return false
}


</script>

</body>

</html>