  <script>

    function CheckSubmit() {
      var username = document.getElementById("tentk");
      if (username.value == "") {
        alert("Yêu cầu nhập username");
        return false;
      }
      var displayname1 = document.getElementById("tenhienthi");
      if (displayname1.value == "") {
        alert("Yêu cầu nhập Tên hiển thị");
        return false
      }

      var mail1 = document.getElementById("mail");
      if (mail1.value == "") {
        alert("Yêu cầu nhập Email");
        return false;
      }
      var matkhau1 = document.getElementById("matkhau");
      if (matkhau1.value == "") {
        alert("Yêu cầu nhập Password");
        return false;
      }
      var namsinh1 = document.getElementById("namsinh");
      if (namsinh1.value == "") {
        alert("Yêu cầu Điền Ngày tháng năm sinh");
        return false;
      }
      return true;
    }

    const signUp = () => {
      $.post("/dangky", {
        username: $("#tentk").val(),
        displayname: $("#tenhienthi").val(),
        email: $("#mail").val(),
        password: $("#matkhau").val(),
        ngaythangnamsinh: $("#namsinh").val()
      })
        .then((data) => {
          if (data.status) {
            alert("Đăng ký thành công.Chuyển sang đăng nhập nhé");
            window.location.href = "/dangnhap"
          } else {
            alert(data.errors[0].msg);
          }
        })
    }
